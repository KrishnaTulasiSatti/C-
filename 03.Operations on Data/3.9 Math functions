#include <iostream>
#include <cmath>
using namespace std;

int main(){

	double weight  = 7.7 ;
    
    //floor
    cout << "Weight rounded to floor is : " << floor(weight) << endl; //7
    
    //ceil 
    cout << "Weight rounded to ceil is : " << ceil(weight) << endl; //8
    
    //abs
    double savings = -5000 ;
  
    cout << "Abs of weight is : " << abs(weight) << endl;
    cout << "Abs of savings is : " << abs(savings) << endl;   //5000
    
    double exponential = exp(10);
    cout << "The exponential of 10 is : " << exponential << endl;
    
    //pow
    cout << "3 ^ 4 is : " << pow(3,4) << endl;
    cout << "9^3 is : " << pow(9,3) << endl;


    //log : reverse function of pow. if 2^3 = 8 , log 8 in base 2 = 3.  
  //  Log, by default computes the log in base e. There also is another function which uses base 10 called log10
    
    cout << "Log ; to get 54.59, you would elevate e to the power of : "
             << log(54.59) << endl;
    
    //log10 , 10 ^ 4 = 10000
    cout << "To get 10000, you'd need to elevate 10 to the power of : "
                 << log10(10000) << endl; // 4



    //sqrt
    cout << "The square root of 81 is : " << sqrt(81) << endl;
    
    //round.
    cout << "3.654 rounded to : " << round(3.654) << endl;  //4
    cout << "2.5 is rounded to : " << round(2.5) << endl;   //3
    cout << "2.4 is rounded to : " << round(2.4) << endl;   //2
  
}
